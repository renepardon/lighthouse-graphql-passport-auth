{
    "name": "renepardon/lighthouse-graphql-passport-auth",
    "description": "Add GraphQL types and mutations for login and recover password functionality through passport with lighthouse",
    "keywords": [
        "laravel",
        "GraphQL",
        "lighthouse",
        "passport"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jose Luis Fonseca",
            "email": "jose@ditecnologia.com"
        },
        {
            "name": "Christoph, RenÃ© Pardon",
            "email": "rene.pardon@boonweb.de"
        }
    ],
    "require": {
        "php": ">=7.2",
        "nuwave/lighthouse": "^4.8",
        "laravel/passport": "^8.2",
        "laravel/socialite": "^4.3",
        "guzzlehttp/guzzle": "^6.5",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "orchestra/testbench": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "Renepardon\\LighthouseGraphQLPassport\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Renepardon\\LighthouseGraphQLPassport\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "suggest": {
        "nuwave/lighthouse": "GraphQL with laravel",
        "laravel/passport": "Authentication the easy way with OAuth2",
        "laravel/socialite": "Social authentication",
        "guzzlehttp/guzzle": "Send PSR7 requests"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Renepardon\\LighthouseGraphQLPassport\\Providers\\LighthouseGraphQLPassportServiceProvider"
            ]
        }
    }
}
